        },
        {
            "type": "dateFile",
            "filename": "./logs/",
            "pattern": "Info/Info_yyyy-MM-dd.log",
            "absolute": true,
            "alwaysIncludePattern": true,
            "category": "LogInfo"
        },
        {
            "type": "dateFile",
            "filename": "./logs/",
            "pattern": "Warn/Warn_yyyy-MM-dd.log",
            "absolute": true,
